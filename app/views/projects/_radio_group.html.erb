<fieldset data-controller="radio-selection">
  <legend class="text-base font-semibold leading-6 text-gray-900"><%= title %></legend>
  <div class="mt-4 grid grid-cols-1 gap-y-2 md:grid-cols-3 xl:grid-cols-5 sm:gap-x-2">
    <% items.each do |item| %>
      <!-- Active: "border-indigo-600 ring-2 ring-indigo-600", Not Active: "border-gray-300" -->
      <label data-action="click->radio-selection#toggle" data-radio-selection-target="option" class="min-h-[56px] relative flex cursor-pointer rounded-md bg-white p-2 focus:outline-none">
        <%= radio_button_tag(name, item, false, class: "form-radio sr-only", "data-action": "click->radio-selection#toggle", "data-radio-selection-target": "radio") %>
        <span class="flex flex-1">
          <span class="flex flex-col">
            <% if name == :app_type %>
              <span class="text-sm font-bold uppercase text-gray-900"><%= item %></span>
              <% if item == :standard %>
                <span class="label bg-red-100 text-red-800 rounded-md">default</span>
              <% end %>
              <span class="mt-1 flex items-center text-sm text-gray-500"><%= ::ProjectCreator::APP_TYPES[item] %></span>
            <% else %>
              <span class="text-sm font-bold uppercase text-gray-900"><%= item %></span>
              <% if ['7.0', '3.2.2', 'sqlite'].include?(item)  %>
                <span class="label bg-red-100 text-red-800 rounded-md">default</span>
              <% end %>
            <% end %>
          </span>
        </span>
        <!-- Not Checked: "invisible" -->
        <svg data-radio-selection-target="check" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"/>
        </svg>
        <!--
          Active: "border", Not Active: "border-2"
          Checked: "border-indigo-600", Not Checked: "border-transparent"
        -->
        <span class="pointer-events-none absolute -inset-px rounded-lg border-2" aria-hidden="true"></span>
      </label>
    <% end %>
  </div>
</fieldset>
